            var _ = jwplayer._;
            var utils = jwplayer.utils;

            function YouTubeProvider(_playerId, _playerConfig, mediaElement) {

                this.name = 'youtube';
                this.startTime = new Date();
                this.position = 0;
                this.duration = 0;
                var _container;
                var _this = this;

                _.extend(this, jwplayer().Events, {
                    getName: YouTubeProvider.getName,
                    play: play,
                    load: load,
                    setContainer: setContainer,
                    stop: stop,
                    supportsFullscreen: _.constant(true),
                    setVisibility: setVisibility,
                    pause: pause,
                    seek: seek
                });

                function play() { console.log("HERE"); }
                function load() { console.log("HERE"); }
                function setContainer() { console.log("HERE"); }
                function stop() { console.log("HERE"); }
                function setVisibility() { console.log("HERE"); }
                function pause() { console.log("HERE"); }
                function seek() { console.log("HERE"); }

            };

            // Register provider
            YouTubeProvider.supports = function(item) {
                /*
                var type = item.type || utils.extension(item.file);
                return (type === TIMER);
                */
                console.log(item);
                return true;
            };

            YouTubeProvider.getName = function() {
                return {name: 'youtube'};
            }

            jwplayer.api.registerProvider(YouTubeProvider);


            // Setup the player
            const player = jwplayer('player').setup({
                /* aspectratio: '4096:1728', */
                file: 'https://www.youtube.com/watch?v=y62zj9ozPOM', /* 'https://cdn.cs50.net/2017/fall/lectures/0/lecture0-1080p.mp4', */
                height: '100%',
                width: '100%'
            });

